<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/reset_image_view_btn"
            android:text="@string/reset_button"
            android:layout_height="wrap_content"/>
    <Spinner android:layout_width="wrap_content"
             android:id="@+id/spinner_list_items"
             android:layout_margin="5dp"
             android:layout_toRightOf="@+id/reset_image_view_btn"
             android:layout_alignBaseline="@id/reset_image_view_btn"
             android:layout_height="wrap_content">

    </Spinner>
    <Button android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/spinner_list_items"
            android:id="@+id/text_bold_btn"
            android:layout_margin="5dp"
            android:text="@string/bold_btn"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/save_image_view_button"
            android:layout_alignParentRight="true"
            android:text="@string/save_button"
            android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:id="@+id/image_view"

               android:layout_centerInParent="true"
               android:layout_height="wrap_content"/>
</RelativeLayout>